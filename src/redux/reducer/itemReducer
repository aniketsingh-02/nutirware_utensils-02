const initialState = {
  items: [],
};

export default function itemReducer(state = initialState, action) {
  switch (action.type) {
    case 'FETCH_ITEMS':
      return {
        ...state,
        items: action.payload,
      };
    case 'ADD_ITEM':
      return {
        ...state,
        items: [...state.items, action.payload],
      };
    default:
      return state;
  }
}
